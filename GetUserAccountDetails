from db import open_connection, close_connection
import json


def get_bank_accounts():
    conn = open_connection()
    with conn.cursor() as cursor:
        cursor.execute("SELECT UserID, LastName, FirstName, DATE_FORMAT(DoB, '%D %M %Y'), Email, PhoneNumber, NINumber, FirstLine, Postcode, Password FROM UserAccount")
        row_headers = [x[0] for x in cursor.description]  
        rv = cursor.fetchall()
        json_data = []
        for result in rv:
            json_data.append(dict(zip(row_headers, result))) 

    conn.commit()

        # add try except       

    close_connection(conn)

    return {
        'statusCode': 200,
        'headers': {'Content-Type': 'application/json'},
        'body': json.dumps(json_data)
    }

print(get_bank_accounts())